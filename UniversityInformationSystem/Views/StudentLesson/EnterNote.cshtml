@model UniversityInformationSystem.Models.NoteModel

@{
    ViewBag.Title = "Create";
    var lessons = (SelectList)ViewBag.Lessons;
}
@using (Html.BeginForm("EnterNote", "StudentLesson", FormMethod.Post))
{
    @Html.HiddenFor(m => m.DersId)
    @Html.HiddenFor(m => m.OgrenciNo)
    @Html.HiddenFor(m => m.Yil)
    <div class="form-group" style="margin-top:25px">
        @Html.LabelFor(m => m.Vize)
        @Html.TextBoxFor(m => m.Vize)
    </div>
    <div class="form-group" style="margin-top:25px">
        @Html.LabelFor(m => m.Final)
        @Html.TextBoxFor(m => m.Final)
    </div>
    <button class="btn btn-success" type="submit">Kaydet</button>
}


