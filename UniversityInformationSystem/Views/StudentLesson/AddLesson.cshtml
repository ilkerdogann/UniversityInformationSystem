@{
    ViewBag.Title = "Create";
    var years = (SelectList)ViewBag.Year;
    var les = (SelectList)ViewBag.Lessons;
}
<div class="p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Öğrenciye Ders Ekle</h1>
    </div>
</div>
<form action="@Url.Action("AddLesson", "StudentLesson")" method="post">
    <div class="form-group">
        @Html.Label("Öğrenci No:")
        <input type="text" id="ogrNo" name="ogrNo" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Ders Adı:")
        @Html.DropDownList("dersId", les, "Seçiniz", new { id = "les" })
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Akademik Yıl:")
        @Html.DropDownList("year", years, "Seçiniz", new { id = "year" }) 
        <label>Akademik Dönem:</label>
        <select id="semester" name="semester">
            <option selected>Seçiniz</option>
            <option value="Güz">Güz</option>
            <option value="Bahar">Bahar</option>
            <option value="Yaz">Yaz</option>
        </select>
        <button type="submit" class="btn btn-info">Ders Ekle</button>
    </div>
</form>
