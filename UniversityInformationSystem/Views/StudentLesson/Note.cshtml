@{
    ViewBag.Title = "Create";
    var lessons = (SelectList)ViewBag.Lessons;
}
<div class="p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Not Giriş Ekranı</h1>
    </div>
</div>
<div class="form-group" style="margin-top:25px">
    @Html.Label("Ders:")
    @Html.DropDownList("lesson", lessons, "Seçiniz", new { id = "lessons" })
</div>
<div id="ogrenciler"></div>
<script>
    $(document).ready(function () {
        $("#lessons").change(function () {        
            var data = { dersId: $("#lessons").val() };
            $.post("@Url.Action("GetStudents", "StudentLesson")", data, function (result) {
                $("#ogrenciler").html(result);
            });
        });
    });
</script>
