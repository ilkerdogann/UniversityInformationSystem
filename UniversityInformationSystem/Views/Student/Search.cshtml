@{
    ViewBag.Title = "Create";
}

<div class="p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Öğrenci Sorgulama Ekranı</h1>
    </div>
</div>

    <div class="form-group">
        @Html.Label("Öğrenci Numarası")
        @Html.TextBox("ogrenciNo", "", new { id = "ogrenciNo" })
    </div>

    <div class="form-group" style="margin-top:25px;">
        <button id="searchButton" class="btn btn-info">Öğrenciyi Bul</button>
    </div>

<div id="studentLessons"></div>
<script>
$(document).ready(function(){
    $("#searchButton").click(function () {
        debugger;
        var data = { ogrenciNo: $("#ogrenciNo").val() }
        $.post("@Url.Action("SearchLessons", "Student")", data, function (data, status) {
            $("#studentLessons").html(data);
    });
  });
});
</script>